# Application
APP_NAME=Enterprise Search
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO

# API
API_V1_PREFIX=/api/v1

# Security
JWT_SECRET_KEY=change-me-to-a-long-random-string-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# OpenSearch
OPENSEARCH_HOST=opensearch
OPENSEARCH_PORT=9200
OPENSEARCH_USE_SSL=false
OPENSEARCH_VERIFY_CERTS=false
OPENSEARCH_USER=
OPENSEARCH_PASSWORD=
OPENSEARCH_TIMEOUT=30

# Index names
DOCUMENTS_INDEX=enterprise-docs
CHUNKS_INDEX=enterprise-chunks

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=enterprise_search
POSTGRES_USER=searchuser
POSTGRES_PASSWORD=searchpass123

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Tika Server
TIKA_SERVER_URL=http://tika:9998

# Embedding Model
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DIMENSION=1024
EMBEDDING_BATCH_SIZE=32
EMBEDDING_DEVICE=cpu

# Search Configuration
DEFAULT_SEARCH_SIZE=10
MAX_SEARCH_SIZE=100
HYBRID_SEARCH_BM25_WEIGHT=0.5
HYBRID_SEARCH_VECTOR_WEIGHT=0.5
RRF_K=60

# Chunking
CHUNK_SIZE=512
CHUNK_OVERLAP=128

# PII Detection
ENABLE_PII_DETECTION=true

# File Upload
MAX_UPLOAD_SIZE=52428800

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
